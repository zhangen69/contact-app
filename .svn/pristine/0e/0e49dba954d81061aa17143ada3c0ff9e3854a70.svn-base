.breadcrumbs {
    list-style: none;
    padding: 0;
    margin: 0;
    height: 100%;
}

.breadcrumbs > li {
    height: 100%;
}

.breadcrumb a {
    text-decoration: none;
    border: 0;
    padding: 5px 10px;
    color: #636363;
}

.breadcrumb a:hover {
    color: #000;
}

.breadcrumbs .breadcrumb ~ .breadcrumb::before {
    content: 'chevron_right';
    font-family: 'Material Icons';
    font-style: normal;
    font-weight: normal;
    text-decoration: inherit;
    font-size: 1.2em;
}