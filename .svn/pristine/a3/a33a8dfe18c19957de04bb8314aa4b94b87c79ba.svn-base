<form [formGroup]="profileData">
  
  <label>
    name:
    <input type="text" formControlName="name">
  </label>

  <label>
    email:
    <input type="text" formControlName="email">
  </label>

  <div formArrayName="experiences">
    <label>
      experiences:
      <div *ngFor="let item of profileData.controls.experiences.controls; let i=index" [formGroup]="profileData.controls.experiences.controls[i]">
        <input type="text" formControlName="title">
        <input type="text" formControlName="remarks">
      </div>
    </label>
  </div>
<p>{{profileData.value | json}}</p>
</form>