<form class="form-container" [formGroup]="formData" (ngSubmit)=onSubmit(formData)>
  <mat-card>
      <mat-card-header>
        <mat-card-subtitle>
          <h3>Quotation Information</h3>
        </mat-card-subtitle>
      </mat-card-header>
      <mat-card-content>
          <div class="form-group">
              <fa-icon icon=user size=1x [fixedWidth]=true></fa-icon>
              <mat-form-field hintLabel="Max 10 characters" appearance="fill">
                <mat-label>Customer</mat-label>
                <input matInput #input maxlength=10 placeholder="Customer" formControlName=customer>
                <mat-hint align=end>{{input.value?.length || 0}}/10</mat-hint>
              </mat-form-field>
          </div>
          <div class="form-group">
              <fa-icon icon=user size=1x [fixedWidth]=true></fa-icon>
              <mat-button-toggle-group formControlName="status" color=primary>
                <label class="label-control">Term</label>
                <mat-button-toggle *ngFor="let enum of quotationStatusList" [checked]="enum === formData.get('status').value" [value]="enum">{{enum.displayName}}</mat-button-toggle>
              </mat-button-toggle-group>
              <!-- <mat-form-field class="w-100" hintLabel="Max 10 characters" appearance="fill">
                  <mat-label>Term</mat-label>
                <input matInput #input maxlength=10 placeholder="Term" formControlName=term>
                <mat-hint align=end>{{input.value?.length || 0}}/10</mat-hint>
              </mat-form-field> -->

          </div>
          <div class="form-group">
              <fa-icon icon=user size=1x [fixedWidth]=true></fa-icon>
              <mat-checkbox #revised_input labelPosition=before formControlName=revised color=primary>Revised</mat-checkbox>
          </div>
          <div class="form-group">
              <fa-icon icon=file size=1x [fixedWidth]=true></fa-icon>
              <mat-form-field>
                <mat-label>Status</mat-label>
                <mat-select formControlName="status" [(value)]="formData.get('status').value">
                  <mat-option value="">-- Select an option --</mat-option>
                  <mat-option *ngFor="let enum of quotationStatusList" [value]="enum">{{enum.displayName}}</mat-option>
                </mat-select>
              </mat-form-field>
          </div>
          <div class="form-group">
            <fa-icon icon=file size=1x [fixedWidth]=true></fa-icon>
            <mat-button-toggle-group formControlName="status" color=primary>
              <label class="label-control">Status</label>
              <mat-button-toggle *ngFor="let enum of quotationStatusList" [checked]="enum === formData.get('status').value" [value]="enum">{{enum.displayName}}</mat-button-toggle>
            </mat-button-toggle-group>
          </div>
          <div class="form-group">
            <fa-icon icon=file size=1x [fixedWidth]=true></fa-icon>
            <mat-label class="label-control">Expandable Panels</mat-label>
            <mat-accordion>
                <!-- expansion panel -->
                <mat-expansion-panel *ngFor="let item of list; let index = index">
                  <mat-expansion-panel-header>
                    <mat-panel-title>Item {{index + 1}}</mat-panel-title>
                    <mat-panel-description>Expand to view/modify MOQ data</mat-panel-description>
                  </mat-expansion-panel-header>
                  <ng-template matExpansionPanelContent>
                    <table mat-table [dataSource]="item.minimumOrderQuantityItems">
                      <ng-container matColumnDef="selected">
                        <th mat-header-cell *matHeaderCellDef>No.</th>
                        <td mat-cell *matCellDef="let element; let elementIndex = index">{{elementIndex + 1}}</td>
                      </ng-container>

                      <ng-container matColumnDef="quantity">
                        <th mat-header-cell *matHeaderCellDef>Quantity</th>
                        <td mat-cell *matCellDef="let element">{{element.quantity}}</td>
                      </ng-container>

                      <ng-container matColumnDef="unitAmount">
                        <th mat-header-cell *matHeaderCellDef>Unit Amount(RM)</th>
                        <td mat-cell *matCellDef="let element">RM {{element.unitAmount | number: '1.4-4'}}</td>
                      </ng-container>

                      <ng-container matColumnDef="subTotal">
                        <th mat-header-cell *matHeaderCellDef>Sub-Total(RM)</th>
                        <td mat-cell *matCellDef="let element">RM {{(element.unitAmount * element.quantity) | number: '1.4-4'}}</td>
                      </ng-container>

                      <tr mat-header-row *matHeaderRowDef="displayedColumns"></tr>
                      <tr mat-row *matRowDef="let row; columns: displayedColumns;"></tr>
                    </table>
                  </ng-template>
                  <mat-action-row>
                    <button mat-raised-button color=primary>Update</button>
                  </mat-action-row>
                </mat-expansion-panel>
              </mat-accordion>
          </div>
      </mat-card-content>
      <mat-card-actions>
        <button mat-button (click)="onBack()">
          <fa-icon icon=undo size=1x [fixedWidth]=true></fa-icon> Back
        </button>
        <button mat-raised-button color=primary type="submit">
          <fa-icon [icon]="['fab', 'wpforms']" size=1x [fixedWidth]=true></fa-icon> Submit
        </button>
      </mat-card-actions>
  </mat-card>
</form>