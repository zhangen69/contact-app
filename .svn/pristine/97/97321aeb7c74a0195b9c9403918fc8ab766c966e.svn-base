.app-container {
    display: flex;
    height: 100%;
}

.app-container > .mat-sidenav {
    width: 250px;
    background: #2A3F54;
    min-height: 100%;
    color: #fff;
    overflow-y: scroll;
}

.app-container > .mat-sidenav.tablet-mode {
    width: 60px;
}

.app-container > .mat-sidenav.tablet-mode > h3 {
    justify-content: center !important;
}

.app-container > .mat-sidenav > .sidenav-header {
    margin: 5px 10px;
    border-bottom: 1px solid #fff;
    padding: 5px 0 15px 0;
}

/* width */
.app-container > .mat-sidenav::-webkit-scrollbar {
    width: 5px;
}

/* Track */
.app-container > .mat-sidenav::-webkit-scrollbar-track {
    box-shadow: inset 0 0 5px grey; 
    border-radius: 10px;
}
 
/* Handle */
.app-container > .mat-sidenav::-webkit-scrollbar-thumb {
    background: #3f4f5f; 
    border-radius: 10px;
}

/* Handle on hover */
.app-container > .mat-sidenav::-webkit-scrollbar-thumb:hover {
    
}

.app-container > .mat-sidenav-content {
    flex: 1 0 auto;
}

.app-container > .mat-sidenav-content > .app-loading {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 100%;
}

.app-container > .mat-sidenav-content > .app-loading > .app-loading-backdrop {
    background-color: #090909;
    opacity: 0.3;
    height: 100%;
    width: 100%;
    position: absolute;
}

.app-container .app-content {
    height: calc(100% - 60px);
    padding: 0 15px;
}

.app-container .app-nav {
    background-color: #eee;
    height: 60px;
}

.app-container .app-nav > .btn-icon {
    outline: none;
    background: none;
    border: none;
    cursor: pointer;
    width: 60px;
    color: #4a6292;
}

.app-container .app-nav > .btn-icon:hover {
    color: #2A3F54;
}
